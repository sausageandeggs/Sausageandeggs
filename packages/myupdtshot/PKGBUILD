# Contributor: Sausageandeggs <sausageandeggs at archlinux dot us>
pkgname=aurupdis
pkgver=8
pkgrel=1
pkgdesc='my attempt at upate notification in conky'
arch=('i686' 'x86_64')
license=('GPL')
groups=('sas')
depends=('conky' 'cower')
source=($pkgname.sh $pkgname aurupdt.sh $pkgname.conf simon-$pkgname.sh simon-$pkgname aurupdt.sh simon-$pkgname.conf)
install=$pkgname.install

package() {
	mkdir -p $pkgdir/home/sas/.conkycolors/$pkgname/
	cp $srcdir/* $pkgdir/home/sas/.conkycolors/$pkgname
	chmod 755 $pkgdir/home/sas/.conkycolors/$pkgname/aurupdt.sh
	mkdir -p $pkgdir/home/simon/.conkycolors/$pkgname/
	cp $srcdir/* $pkgdir/home/simon/.conkycolors/$pkgname
	chmod 755 $pkgdir/home/simon/.conkycolors/$pkgname/aurupdt.sh
}

