# Contributor: Sausageandeggs <sausageandeggs at archlinux dot us>
pkgname=aurupdis
pkgver=5
pkgrel=1
pkgdesc='my attempt at upate notification in conky'
arch=('i686' 'x86_64')
license=('GPL')
groups=('sas')
depends=('conky' 'bauerbill')
source=($pkgname.sh $pkgname aurupdt.sh $pkgname.conf)
install=$pkgname.install

package() {
	mkdir -p $pkgdir/home/sas/.conkycolors/$pkgname/
	cp $srcdir/* $pkgdir/home/sas/.conkycolors/$pkgname
	chmod 755 $pkgdir/home/sas/.conkycolors/$pkgname/aurupdt.sh
}

md5sums=('f6b7e6f3b33d6e559f9655609dcc5ba2'
         'c3d3c4b3ca5218cd3c285f10c0eb4bc5'
         '0f23ee320de67d36c5a569d15200be96'
         'e2705d07bce570d4601775ac5e3be96c')
