#!/bin/bash
dlds=/tmp/$RANDOM
sudo /usr/bin/pacman -Sy 1>/dev/null 2>&1
declare -a updts=($(pacman -Quq)) # | sed 's|\ |\-|g'))

if [[ ${#updts[*]} != "0" ]]; then
	a=0
	b=0
	for i in ${updts[*]};do
		declare -a getnew[a]="$(expac '%n-%v' -S $i)"
		(( a++ ))
	done
	for i in ${getnew[*]} ; do
		ls "/var/cache/pacman/pkg/$i"* 1>/dev/null # 2>>$dlds
		[[ $? != 0 ]] && echo $i >> $dlds
	done
	for j in ${updts[*]};do
		cat $dlds | grep "$j"
		[[ $? == 0 ]] && declare -a newdown[b]="$j"
		(( b++ ))
	done
	if [[ ${#newdown[*]} != "0" ]]; then
		sudo powerpill -wu ${newdown[*]} 1>/dev/null 2>&1
		rm -rf $dlds
	fi
fi

